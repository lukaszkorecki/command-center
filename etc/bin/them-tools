#!/usr/bin/env bash

apps=(Slack
      "Fantastical 2"
      Fantastical
      Todoist
      MailMate
      Docker
      Emacs
     )

command=$1
start_mac() {
    echo "Starting all apps"
    for i in "${apps[@]}" ; do
        echo "Opening $i"
        open -g  -a "$i"
    done
}

start() {
    start_mac

}


stop() {
    echo "Stopping all apps"
    for i in "${apps[@]}" ; do
        echo "Killing $i"
        pkill -f "$i"
    done
}


main() {
    if [[ "$command" = "start" ]] ; then
        start
    elif [[ "$command" = "stop" ]] ; then
        stop
    else
        echo "usage: work-tools start|stop"
    fi
}


main "$*"
